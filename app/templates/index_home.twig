  {# Google Map API #}
    <script>
      function loadMap(aq_data_load) {  
          // Initialize Google Maps
          var mapOptions = {
            center:new google.maps.LatLng(aq_data_load.latitude, aq_data_load.longitude),
            zoom: 11,
          }
          map_setting = new google.maps.Map(document.getElementById("map"), mapOptions);
          gmarker = [];
          gcircle = [];
      }

        //get array AirQuality data
        function setPin(aqi_type){
            
          var posting = $.post( "/qi/device/aq_data/move_map", 
          { lat_min : sw.lat(), lng_min : sw.lng(), lat_max : ne.lat(), lng_max : ne.lng() , aqi_type : aqi_type} );
              
          posting.done( function (data) {

            for(var i = 0 ; i < gmarker.length ; i ++){
              if(gmarker[i].getMap() != null)
                gmarker[i].setMap(null);
              
            }

            for(var i = 0 ; i < gcircle.length ; i++){
              if(gcircle[i].getMap() != null)
                gcircle[i].setMap(null);
            }

            if(aqi_type == 'all'){
              $.each(data,function(index, item){

                if(index != 'result_code' && index != 'message'){

                  var image = {
                    url:  '/img/kangaroo_pin.png',
                    scaledSize: new google.maps.Size(50, 50) // scaled size
                  };

                  var marker = new google.maps.Marker({
                    map: map_setting,
                    position: new google.maps.LatLng(item['latitude'], item['longitude']),
                    title: item['usn'],
                    icon: image
                  });

                  var infowindow = new google.maps.InfoWindow();

                  gmarker.push(marker);

                  marker.addListener('click', function() {
                    infowindow.setContent("<p>AQI_CO : " + item['CO'] + 
                                          "</br>AQI_SO2 : " + item['SO2'] + 
                                          "</br>AQI_O3 : " + item['O3'] + 
                                          "</br>AQI_NO2 : " + item['NO2'] + 
                                          "</br>AQI_PM2.5 : " + item['PM2_5'] + 
                                          "</br>temperature : " + item['temperature'] + 
                                          "</br>datetime : " + item['datetime'] +
                                          "</p>");
                    infowindow.open(map, this);
                  });
                  setCircle(item,aqi_type);
                }//end if

              });// end for each

            }else{
              $.each(data,function(index, item){

                if(index != 'result_code' && index != 'message'){
                  var image = {
                    url:  '/img/kangaroo_pin.png',
                    scaledSize: new google.maps.Size(50, 50) // scaled size
                  };

                  var marker = new google.maps.Marker({
                    map: map_setting,
                    position: new google.maps.LatLng(item['latitude'], item['longitude']),
                    title: item['usn'],
                    icon: image
                  });

                  var infowindow = new google.maps.InfoWindow();

                  gmarker.push(marker);

                  marker.addListener('click', function() {
                    infowindow.setContent("<p>"+aqi_type+" : " + item[aqi_type] +
                                          "</br>datetime : " + item['datetime'] +
                                          "</p>");
                    infowindow.open(map, this);
                  });
                }
                setCircle(item,aqi_type);
              });
            }//end else
            
          });//end done
          
        }//end setPin()
        

        $("button#aq_data").click(function(){
          
          switch (this.value){
            case "CO":
              setPin('CO');
              break;

            case "SO2":
              setPin('SO2');
              break;

            case "O3":
              setPin('O3');
              break;

            case "NO2":
              setPin('NO2');
              break;

            case "PM2.5":
              setPin('PM2_5');
              break;

            case "temperature":
              setPin('temperature');
              break;
            
            default :
              setPin('all');

            }//end switch

          }); // end button events

      function setCircle(item, aqi_type){
        if(aqi_type == 'all'){
          var circ = new google.maps.Circle({
                    center: new google.maps.LatLng(item['latitude'], item['longitude']),
                    clickable:false,
                    fillColor: item['AQI_CO_COLOR'],
                    fillOpacity:0.3, 
                    map:map_setting,
                    radius:1000,
                    strokeColor: item['AQI_CO_COLOR'],
                    strokeOpacity:0.3
          });// end circle
          gcircle.push(circ);
        }else{
          var circ = new google.maps.Circle({
                    center: new google.maps.LatLng(item['latitude'], item['longitude']),
                    clickable:false,
                    fillColor: item['AQI_' + aqi_type + '_COLOR'],
                    fillOpacity:0.3, 
                    map:map_setting,
                    radius:1000,
                    strokeColor: item['AQI_' + aqi_type + '_COLOR'],
                    strokeOpacity:0.3
          });// end circle
          gcircle.push(circ);
        }
        
      } 
         
            
    </script>

  
