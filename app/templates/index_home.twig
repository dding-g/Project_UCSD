  {# Google Map API #}
    <script>
      function loadMap(aq_data_load) {  
          // Initialize Google Maps
          var mapOptions = {
            center:new google.maps.LatLng(aq_data_load.latitude, aq_data_load.longitude),
            zoom: 15,
          }
          map_setting = new google.maps.Map(document.getElementById("map"), mapOptions);
          gmarker = [];
          gcircle = [];
      }

        //get array AirQuality data
        function setPin(aqi_type){
          remove_pin();
          var posting = $.post( "/qi/device/aq_data/move_map", 
          { lat_min : sw.lat(), lng_min : sw.lng(), lat_max : ne.lat(), lng_max : ne.lng() , aqi_type : aqi_type, usn : -1, ssn : -1} );
              
          posting.done( function (data) {

           
            if(aqi_type == 'all'){
              $.each(data,function(index, item){

                if(index != 'result_code' && index != 'message'){

                  var image = {
                    url:  '/img/kangaroo_pin.png',
                    scaledSize: new google.maps.Size(50, 50) // scaled size
                  };

                  var marker = new google.maps.Marker({
                    map: map_setting,
                    position: new google.maps.LatLng(item['latitude'], item['longitude']),
                    title: item['usn'],
                    icon: image
                  });


                  gmarker.push(marker);
                  
                  if(is_clicked_marker != 0){
                    for(var i = 0 ; i < aqi_data_type.length ; i ++){
                        if(aqi_data_type[i] != 'temperature' && aqi_data_type[i] != 'datetime'){
                          displayed_sensor_color[i] = item["AQI_" + aqi_data_type[i] + "_COLOR"];
                          displayed_sensor_data[i] = item["AQI_"+aqi_data_type[i]];
                        }
                        else{
                          displayed_sensor_data[i] = item[aqi_data_type[i]];
                        }
                    }                  
                  }
                  
                  

                  marker.addListener('click', function() {
                    is_clicked_marker = 1;
                    var device_post = $.post("/qi/device/google_map_clicked_device/process",{ssn : item['ssn']});

                    device_post.done(function(data_val){
                      displayed_sensor_name = data_val[0]['device_name'];
                    

                      for(var i = 0 ; i < aqi_data_type.length ; i ++){
                        if(aqi_data_type[i] != 'temperature' && aqi_data_type[i] != 'datetime'){
                          displayed_sensor_color[i] = item["AQI_" + aqi_data_type[i] + "_COLOR"];
                          displayed_sensor_data[i] = item["AQI_"+aqi_data_type[i]];
                        }
                        else{
                          displayed_sensor_data[i] = item[aqi_data_type[i]];
                        }
                      }
                      setData_in_databox();
                      var infowindow = new google.maps.InfoWindow();
                      infowindow.setContent("<p><b>Device Name</b></p><hr>" + "<b>" + displayed_sensor_name + "</b>");
                      infowindow.open(map, marker);
                    });
                    
                  });
                  setCircle(item,aqi_type);
                }//end if

              });// end for each

            }else{
              $.each(data,function(index, item){

                if(index != 'result_code' && index != 'message'){
                  var image = {
                    url:  '/img/kangaroo_pin.png',
                    scaledSize: new google.maps.Size(50, 50) // scaled size
                  };

                  var marker = new google.maps.Marker({
                    map: map_setting,
                    position: new google.maps.LatLng(item['latitude'], item['longitude']),
                    title: item['usn'],
                    icon: image
                  });

                  var infowindow = new google.maps.InfoWindow();

                  gmarker.push(marker);

                  marker.addListener('click', function() {
                    infowindow.setContent("<p>"+aqi_type+" : " + item[aqi_type] +
                                          "</br>datetime : " + item['datetime'] +
                                          "</p>");
                    infowindow.open(map, this);
                  });
                }
                setCircle(item,aqi_type);
              });
            }//end else
            
          });//end done
          
        }//end setPin()
        

        $("button#aq_data").click(function(){
          
          switch (this.value){
            case "CO":
              setPin('CO');
              break;

            case "SO2":
              setPin('SO2');
              break;

            case "O3":
              setPin('O3');
              break;

            case "NO2":
              setPin('NO2');
              break;

            case "PM2.5":
              setPin('PM2_5');
              break;

            case "temperature":
              setPin('temperature');
              break;
            
            default :
              setPin('all');

            }//end switch

          }); // end button events

      function setCircle(item, aqi_type){
        if(aqi_type == 'all'){
          aqi_temp = {
                'CO' : item['AQI_CO'], 
                'SO2' : item['AQI_SO2'], 
                'O3' : item['AQI_O3'], 
                'NO2' : item['AQI_NO2'], 
                'PM2_5' : item['AQI_PM2_5']
          };
          var temp_aqi_max = 0;
          var most_harzard_aqi = '';

          $.each(aqi_temp, function(index, item){
            if(index > temp_aqi_max){
              most_harzard_aqi = item;
            }
          });

          var circ = new google.maps.Circle({
                    center: new google.maps.LatLng(item['latitude'], item['longitude']),
                    clickable:false,
                    fillColor: item['AQI_'+most_harzard_aqi+'_COLOR'],
                    fillOpacity:0.3, 
                    map:map_setting,
                    radius:1000,
                    strokeColor: item['AQI_'+most_harzard_aqi+'_COLOR'],
                    strokeOpacity:0.3
          });// end circle
          gcircle.push(circ);
        }else{
          var circ = new google.maps.Circle({
                    center: new google.maps.LatLng(item['latitude'], item['longitude']),
                    clickable:false,
                    fillColor: item['AQI_' + aqi_type + '_COLOR'],
                    fillOpacity:0.3, 
                    map:map_setting,
                    radius:1000,
                    strokeColor: item['AQI_' + aqi_type + '_COLOR'],
                    strokeOpacity:0.3
          });// end circle
          gcircle.push(circ);
        }
      } 

      function setData_in_databox(){
        for(var i = 0; i < aqi_data_type.length ; i ++){
          $("#" + aqi_data_type[i] + "_val").html(displayed_sensor_data[i]);
          
          if(aqi_data_type[i] != 'temperature' || aqi_data_type[i] != 'datetime') 
            $("#div_" + aqi_data_type[i]).attr('style','background-color : '+displayed_sensor_color[i]+' !important ; flex-direction : row; margin-bottom:20px ');
        }
        $("#device_name_val").html(displayed_sensor_name);
      }
         
      function remove_pin(){
         for(var i = 0 ; i < gmarker.length ; i ++){
              if(gmarker[i].getMap() != null)
                gmarker[i].setMap(null);
              
            }

            for(var i = 0 ; i < gcircle.length ; i++){
              if(gcircle[i].getMap() != null)
                gcircle[i].setMap(null);
            }
      }
    </script>

  
