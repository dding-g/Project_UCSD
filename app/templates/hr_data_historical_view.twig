        document.getElementById('email').innerHTML = "<Button class='btn btn-primary btn-user btn-block' onclick = 'sign_in_btn_click()'>SIGN IN</Button>";
        $("#userDropdown").prop("disabled", true);
      }else{
        $("#userDropdown").prop("enable", true);
        document.getElementById('email').innerHTML = email;
      }

      $( "#date_start" ).datepicker({
        dateFormat: 'yy-mm-dd'
      });

      $( "#date_end" ).datepicker({
        dateFormat: 'yy-mm-dd'
      });
      
    });


    function sign_in_btn_click(){
      window.location.href = "/qi/sign-in";
    }
