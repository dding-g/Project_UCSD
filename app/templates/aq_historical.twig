    function drawChart(clicked_ssn) {
        var posting = $.post( "/qi/device/aq_data/historical/chartdata/process",
        {date_start : $("#date_start").val(), date_end : $('#date_end').val(), usn : localStorage.getItem('usn'), ssn : clicked_ssn});
        
        posting.done(function(data){
          // parse the json data
            var oobj = data['chart'];

            var title_array = {
              "CO" : "CO Chart (ppb) ",
              "SO2" : "SO2 Chart (SO2) ",
              "O3" : "O3 Chart (O3)",
              "NO2" : "NO2 Chart (NO2)",
              "PM2_5" : "PM2.5 Chart (pm25)",
              "temperature" : "Temperature Chart(C)"
              };

            for(i = 0 ; i < chart_drawed.length ; i ++){
              chart_drawed[i].remove();
            }
            chart_drawed = [];

            for (i=0; i<s_array.length; i++) {
                // want to grab set of data for single sensor
                var newData = JSON.stringify(oobj[s_array[i]][0]);

                // Create our data table out of reduced json
                var chart_draw_data = new google.visualization.DataTable(newData);

                var options = {
                    width: 800, height: 480,
                    title: title_array[s_array[i]],
                    hAxis: {
                        title: 'Sources', 
                        slantedText: true
                    }
                };

                
                var chart = new google.visualization.LineChart(document.getElementById('chart_div_' + s_array[i]));
                chart_drawed[i] = 'chart_div_' + s_array[i];
                chart.draw(chart_draw_data, options);
            }

            
        });
      }
          
